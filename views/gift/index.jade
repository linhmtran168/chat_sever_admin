extends ../layout

block content
  .tab-bar
    ul.nav.nav-tabs
      li.active.offset3
        a(href="/gift") Manage Gift

  #gift-store.row.offset2
    if typeof(message) !== 'undefined' && message.length !== 0
      #message-box
      .row
        .alert.alert-error.span6.offset6.message-parttimer
            button.close(type='button', data-dismiss='alert') x
            =message

    #left-nav.span3
      ul.nav.nav-list
        li.nav-header Categories
        for category in categories
          li
            a(href='#')=category.name
        li.divider
        li
          a(href='/gift/categories') Manage categories
        li
          a(href='/gift/add') Add new gift

    #gifts.span10
      if gifts.length === 0
        #notify-box.row.offset2
          p.lead.text-info There is no gift right now
      else
        ul#gifts-grid.thumbnails
          for gift in gifts
            li.span2
              .thumbnail
                .thumbnail-img-div
                  a(href='/gift/#{ gift.id }')
                    if env === 'local'
                      img(src='/images/#{ gift.image }')
                    else
                      img(src='http://49.212.161.19:3050/#{ gift.image }')
                .caption
                  p
                    strong=gift.name
                  p 
                    em #{ gift.cost } pts
                  p.options
                    a.pull-left.text-info(href='/gift/#{ gift.id }') More
                    a.pull-right.text-error(href='/gift/delete/#{ gift.id }') Delete

