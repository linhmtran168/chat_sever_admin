extends ../layout

block content
  .tab-bar
    ul.nav.nav-tabs
      li.offset3
        a(href="/gift") Manage Gift
      li.active
        a(href="/gift/add") Update Gift
  if typeof(message) !== 'undefined' && message.length !== 0
    #message-box
    .row
      .alert.alert-error.span6.offset6.message-parttimer
          button.close(type='button', data-dismiss='alert') x
          =message

  .row
    .span7.offset6.new-gift-block
      form#new-gift.form(action='/gift/edit/#{ gift.id }', method='post',
        enctype='multipart/form-data')
        input(type='hidden', name='_csrf', value=token)
        div.offset1.gift-inputs
          label.control-label(for='image') Gift Image:
            .fileupload.fileupload-new(data-provides='fileupload')
              .fileupload-new.thumbnail.align-image
                if env === 'local'
                  img.span4(src='/images/#{ gift.image }')
                else
                  img.span4(src='http://49.212.161.19:3050/#{ gift.image }')
              .fileupload-preview.fileupload-exists.thumbnail.uploaded-image
              .image-buttons
                span.btn.btn-file
                  span.fileupload-new Select image
                  span.fileupload-exists Change
                  input(type='file', name='image')

                a.btn.fileupload-exists(href='#', data-dismiss='fileupload') Remove
            
          div.control-group
            label.control-label(for='name') Gift Name:
            div.controls
              input#name.input-xlarge(type='text', name='name', placeholder='Gift name', required, value='#{ gift.name}')
              p.help-block

          div.control-group
            label.control-label(for='name') Category:
            div.controls
              select#category.input-xlarge(name='category')
                for category in categories
                  if gift.category === category.id
                    option(value='#{ category.id }', selected)=category.name
                  else
                    option(value='#{ category.id }')=category.name
              p.help-block
          div.control-group
            label.control-label(for='point') Point Cost:
            div.controls
              input#cost.input-large(type='text', name='cost', placeholder='Point', data-validation-regex-regex=' *[0-9]+ *', data-validation-regex-message='Please enter a number', required, value='#{ gift.cost }')
              p.help-block

          div.control-group
            label.control-label(for='description') Description:
            div.controls
              textarea.span4(name='description', placeholder='Description')=gift.description


          div.control-group.register-submit
            div.controls
              button.btn.btn-primary(type='submit') Save Gift
